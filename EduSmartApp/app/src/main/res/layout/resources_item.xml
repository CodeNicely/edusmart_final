<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin_medium"
        app:cardBackgroundColor="#00000000"
        android:padding="4dp"
        app:cardCornerRadius="@dimen/card_radius_medium"
        app:contentPadding="@dimen/card_padding_medium">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blshdish"
            android:id="@+id/topic_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="fsdfdzx"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/description" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/student_count"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/faculty_name"/>


    </android.support.v7.widget.CardView>

</LinearLayout>