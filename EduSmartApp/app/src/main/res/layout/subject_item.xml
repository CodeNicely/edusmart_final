<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin_medium"
        android:padding="4dp"
        app:cardCornerRadius="@dimen/card_radius_medium"
        app:contentPadding="@dimen/card_padding_medium">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subject_logo"
                android:padding="24dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="blshdish"
                    android:padding="10dp"
                    android:id="@+id/subject_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="fsdfdzx"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/subject_description" />
            </LinearLayout>
 <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:layout_gravity="bottom"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/student_count"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/faculty_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timestamp"/>
</LinearLayout>


        </LinearLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>